<?xml version="1.0" encoding="utf-8" ?>
<Configuration >

    <Properties>
        <Property name="LOG_HOME">./logs</Property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%t]%d %-5p (%F:%L)  - %m%n" />
        </Console>

    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
        <AsyncLogger name="RollingFile" level="trace" additivity="false">
            <appender-ref ref="RollingFile"/>
        </AsyncLogger>
    </Loggers>
</Configuration>